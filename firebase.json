{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": [
      "yarn --prefix \"$RESOURCE_DIR\" lint"
    ]
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "database-rules.json",
      "functions",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
